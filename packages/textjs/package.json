{
  "name": "@textjs/core",
  "version": "0.0.1",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "build": "bun run script/build.ts"
  },
  "devDependencies": {
    "@types/react": "19.0.8",
    "@types/react-reconciler": "0.28.9",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "react-reconciler": "0.31.0",
    "yoga-layout": "3.2.1"
  },
  "peerDependencies": {
    "@types/react": ">=19.0.0",
    "react": ">=19.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./*": {
      "import": "./dist/esm/*.js",
      "types": "./dist/types/*.d.ts"
    },
    "./components": {
      "import": "./dist/esm/components/index.js",
      "types": "./dist/types/components/index.d.ts"
    },
    "./query": {
      "import": "./dist/esm/hooks/use-query.js",
      "types": "./dist/types/hooks/use-query.d.ts"
    },
    "./jsx": {
      "import": "./dist/esm/jsx-runtime.js",
      "types": "./dist/types/jsx-runtime.d.ts"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "prettier": {
    "semi": false
  }
}
