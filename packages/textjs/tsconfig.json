{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "@textjs/core",
    "baseUrl": ".",
    "paths": {
      "@textjs/core/*": ["src/*"]
    }
  },
  "include": ["src"]
}
