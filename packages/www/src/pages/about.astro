---
import Caret from '@components/caret'
import Editor from '@components/editor.astro'
import Line from '@components/line.astro'
import Layout from '@layouts/base.astro'

const heroes = [
  'thdxr',
  'adamdotdev',
  'theprimeagen',
  'teej_dv',
  'iamdavidhill',
]
---

<Layout>
  <Editor>
    <Line>
      <h1>
        # Amazingly awesome products for developers brought to you by a group of
        talented, good looking, and humble heroes...
      </h1>
    </Line>
    {
      heroes.map((hero) => (
        <Line href={`https://x.com/${hero}`}>
          <h2>{`# @${hero}`}</h2>
        </Line>
      ))
    }
    <Line>
      <div class="flex items-center gap-1.5">
        <h3 class="text-white whitespace-nowrap">Terminal Products, Inc.</h3>
        <Caret />
      </div>
    </Line>
  </Editor>
</Layout>
