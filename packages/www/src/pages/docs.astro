---
import Layout from '@layouts/base.astro'
const openapiUrl = 'https://app.stainlessapi.com/api/spec/documented/terminal'
---

<Layout>
  <div slot="docs">
    <style>
      :root {
        --scalar-custom-header-height: 40px;
        --scalar-border-width: 1px;
        --scalar-radius: 0px;
        --scalar-radius-lg: 0px;
        --scalar-radius-xl: 0px;
        --scalar-font: theme('fontFamily.mono');
        --scalar-font-code: theme('fontFamily.mono');
        --scalar-heading-1: 16px;
        --scalar-page-description: 16px;
        --scalar-heading-2: 16px;
        --scalar-heading-3: 16px;
        --scalar-heading-4: 16px;
        --scalar-heading-5: 16px;
        --scalar-heading-6: 16px;
        --scalar-paragraph: 16px;
        --scalar-small: 16px;
        --scalar-mini: 16px;
        --scalar-micro: 16px;
        --scalar-bold: 600;
        --scalar-semibold: 500;
        --scalar-regular: 400;
        --scalar-font-size-1: 16px;
        --scalar-font-size-2: 16px;
        --scalar-font-size-3: 16px;
        --scalar-font-size-4: 16px;
        --scalar-font-size-5: 16px;
        --scalar-font-size-6: 16px;
        --scalar-font-size-7: 16px;
        --scalar-line-height-1: 180%;
        --scalar-line-height-2: 180%;
        --scalar-line-height-3: 180%;
        --scalar-line-height-4: 180%;
        --scalar-line-height-5: 180%;
        --scalar-font-medium: 500;
        --scalar-font-bold: 700;
        --scalar-text-decoration: none;
        --scalar-text-decoration-hover: underline;
        --scalar-link-font-weight: inherit;
      }
      @media (max-width: 460px) {
        :root {
          --scalar-font-size-1: 16px;
          --scalar-font-size-2: 16px;
          --scalar-font-size-3: 16px;
        }
      }
      @media (max-width: 720px) {
        :root {
          --scalar-heading-1: 16px;
          --scalar-page-description: 16px;
        }
      }
      :root {
        :not(code *) {
          text-transform: lowercase;
        }
        code,
        code * {
          text-transform: initial !important;
        }
        .sidebar-heading:not(.active_page) {
          border-left-width: 2px;
          border-left-color: transparent;
        }
        .active_page {
          border-left-width: 2px;
          border-left-color: theme('colors.orange');
        }
        .sidebar-group-item__folder {
          color: theme('colors.white') !important;
        }
        .sidebar-group-item__folder:hover {
          color: theme('colors.white') !important;
        }
        .darklight-reference {
          display: none !important;
        }
        .sidebar-heading-chevron {
          display: none !important;
        }
        .introduction-card-item:has(.client-libraries-heading) {
          display: none !important;
        }
        .scalar-api-references-standalone-search {
          padding: 0 !important;
        }
        .sidebar-search-input {
          height: 40px !important;
        }
        .sidebar-indent-nested .sidebar-heading:has(.sidebar-heading-link) {
          padding-left: 12px !important;
        }
        .sidebar-pages {
          padding: 0px !important;
        }
        .sidebar-heading-link {
          padding: 0px !important;
          line-height: 2.5rem;
        }
        .sidebar-heading-type {
          font-size: var(--scalar-font-size-1) !important;
          font-weight: var(--scalar-regular) !important;
        }
        .scalar-app .introduction-description .markdown {
          color: var(--scalar-color-2) !important;
        }
        .request-body-title-select {
          border-radius: 0 !important;
        }
        .operation-details .markdown p {
          color: var(--scalar-color-2) !important;
        }
        @container (min-width: 900px) {
          .section {
            padding: 40px 0 !important;
          }
        }
        .parameter-item-content-type {
          color: var(--scalar-color-accent) !important;
          border-radius: var(--scalar-radius) !important;
        }
        .schema-properties,
        .badge {
          border-radius: var(--scalar-radius) !important;
        }
        .dark-mode {
          --scalar-color-1: theme('colors.white');
          --scalar-color-2: theme('colors.gray.11');
          --scalar-color-3: theme('colors.gray.10');
          --scalar-color-blue: theme('colors.blue.11');
          --scalar-color-green: theme('colors.green.11');
          --scalar-color-red: theme('colors.red.11');
          --scalar-color-orange: theme('colors.orange');
          --scalar-color-accent: theme('colors.orange');
          --scalar-background-1: theme('colors.black');
          --scalar-background-2: theme('colors.gray.1');
          --scalar-background-3: theme('colors.gray.5');
          --scalar-border-color: theme('borderColor.DEFAULT');
          /* --scalar-background-accent:   */
        }
        .dark-mode .t-doc__sidebar {
          --scalar-sidebar-color-2: theme('colors.gray.10');
          --scalar-sidebar-color-active: theme('colors.gray.11');
          --scalar-sidebar-background-1: theme('colors.black');
          --scalar-sidebar-item-active-background: theme('colors.gray.6');
          --scalar-sidebar-item-hover-background: theme('colors.gray.5');
        }
      }
    </style>
    <script
      id="api-reference"
      data-url={openapiUrl}
      data-configuration={JSON.stringify({
        hiddenClients: [
          'libcurl',
          'clj_http',
          'httpclient',
          'restsharp',
          'native',
          'http1.1',
          'asynchttp',
          'nethttp',
          'okhttp',
          'unirest',
          'xhr',
          'axios',
          'fetch',
          'jquery',
          'okhttp',
          'native',
          'request',
          'unirest',
          'axios',
          'fetch',
          'nsurlsession',
          'cohttp',
          'guzzle',
          'http1',
          'http2',
          'webrequest',
          'restmethod',
          'python3',
          'requests',
          'httr',
          'native',
          'httpie',
          'wget',
          'nsurlsession',
          'undici',
          'ofetch',
        ],
        operationsSorter: 'method',
        hideTestRequestButton: true,
        defaultOpenAllTags: true,
        hideDarkModeToggle: true,
        forceDarkModeState: 'dark',
        hideDownloadButton: true,
        withDefaultFonts: false,
      })}
    >
    </script>
    <script src="https://cdn.jsdelivr.net/npm/@scalar/api-reference"></script>
  </div>
</Layout>
