---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'div'> {
  numberless?: boolean
}
const { class: _, ...props } = Astro.props
---

<div
  {...props}
  class:list={{
    'leading-10': true,
    editor: !props.numberless,
    [Astro.props.class ?? '']: !!Astro.props.class,
  }}
>
  <slot />
</div>
