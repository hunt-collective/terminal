---
import type { HTMLAttributes } from 'astro/types'
import Line from '@components/line.astro'
import { Image } from 'astro:assets'

interface Props extends HTMLAttributes<'img'> {}
const { class: _, ...props } = Astro.props
---

<Line />
<figure class="">
  <div class="bg-gray-1 border-y">
    <!-- @ts-expect-error -->
    <Image {...props} width={500} height={400} class="mx-auto" />
  </div>
</figure>
{
  props.alt && (
    <figcaption class="">
      <Line>
        <span
          slot="content"
          class="w-full sm:text-center italic lowercase sm:ml-[-60px]"
        >
          {props.alt}
        </span>
      </Line>
    </figcaption>
  )
}
